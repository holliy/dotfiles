[core]
	editor = vim
[init]
	defaultBranch = main
[pull]
	ff = only
[status]
	showUntrackedFiles = all
[diff]
	algorithm = histogram
	indentHeuristic = true
[alias]
	partialclone = clone --filter=blob:none
	unstage = restore --staged
	amend = commit --amend
	commitadd = commit --amend --no-edit
	diffc = diff --cached
	diffs = diff --stat
	logline = log --oneline --graph
	s = status
	sa = status --ignored
# vi: noet ts=4 sw=4 ft=gitconfig:
